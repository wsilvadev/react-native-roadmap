{
    "expo": {
        "name": "roadmap_course",
        "slug": "roadmap_course",
        "version": "1.0.0",
        "orientation": "portrait",
        "scheme": "myapp",
        "userInterfaceStyle": "automatic",
        "newArchEnabled": true,
        "ios": {
            "supportsTablet": true,
            "package": "com.roadmap_course"
        },
        "android": {
            "adaptiveIcon": {
                "backgroundColor": "#ffffff",
                "package": "com.roadmap_course"
            }
        },
        "web": {
            "bundler": "metro",
            "output": "static"
        },
        "plugins": [
            "expo-router",
            [
                "expo-splash-screen",
                {
                    "imageWidth": 200,
                    "resizeMode": "contain",
                    "backgroundColor": "#ffffff"
                }
            ]
        ],
        "experiments": {
            "typedRoutes": true
        }
    }
}
